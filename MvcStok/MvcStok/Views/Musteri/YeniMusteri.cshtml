@model MvcStok.Models.Entity.TblMusteri
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Müşteri Adı</label>
        @*<input type="text" class="form-control" name="MusterıAd" />*@
        @Html.TextBoxFor(m => m.MusterıAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusterıAd, "", new { @style = "color:red" })
    </div>
    <div>
        <label>Müşteri Soyadı</label>
        @*<input type="text" class="form-control" name="MusterıSoyad" />*@
        @Html.TextBoxFor(m => m.MusterıSoyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusterıSoyad, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri Ekleme İşlemi Yapıldı');
        });
    </script>
</form>
