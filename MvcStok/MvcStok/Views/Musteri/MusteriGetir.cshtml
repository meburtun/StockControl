@model MvcStok.Models.Entity.TblMusteri
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Musteri", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.MusterıId)
        @Html.TextBoxFor(m => m.MusterıId, new { @class = "form-control", @readonly = true })
        <br />
        @Html.LabelFor(m => m.MusterıAd)
        @Html.TextBoxFor(m => m.MusterıAd, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m=>m.MusterıSoyad)
        @Html.TextBoxFor(m => m.MusterıSoyad, new {@class="form-control"})
    </div>
    <div>
        <button class="btn btn-warning">Müşteri Güncelle</button>
    </div>
}
