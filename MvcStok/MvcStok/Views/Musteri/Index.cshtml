<h2 class="text text-center">Müşteriler Tablosu</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri ID</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            @*<th>Alert</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MusterıId</td>
                <td>@mus.MusterıAd</td>
                <td>@mus.MusterıSoyad</td>
                @*<td><a href="/Musteri/Sil/@mus.MusterıId" class="btn btn-danger">Sil</a></td>*@
                <td>
                    @Html.ActionLink("Sil", "Sil", new { id = mus.MusterıId },
               new { @class = "btn btn-warning", onclick = "return confirm('Silmek istiyor musunuz ?')" })
                </td>
                <td><a href="/Musteri/MusteriGetir/@mus.MusterıId" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>

